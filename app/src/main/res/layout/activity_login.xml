<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/main"
    android:padding="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cryptocurrency.Activity.LoginActivity">

    <TextView
        android:text="Log In"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:text="Username"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintStart_toStartOf="@id/login"
        android:id="@+id/userHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/user"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edittext_back"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#707070"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/userHeader"
        app:layout_constraintTop_toBottomOf="@+id/userHeader">
    </EditText>

    <TextView
        android:layout_marginTop="32dp"
        android:id="@+id/passHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/user"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintStart_toStartOf="@+id/login"
        tools:layout_editor_absoluteY="25dp">
    </TextView>

    <EditText
        android:id="@+id/password"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:background="@drawable/edittext_back"
        android:textColor="#707070"
        android:textSize="20sp"
        android:padding="10dp"
        app:passwordToggleEnabled="true"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passHeader"
        app:layout_constraintStart_toStartOf="@id/passHeader"
        android:layout_width="0dp"
        android:layout_height="50dp">
    </EditText>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Your Password?"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password"
        tools:layout_editor_absoluteY="25dp">
    </TextView>
    
    <androidx.appcompat.widget.AppCompatButton
        android:text="Login"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/forget"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password"
        android:id="@+id/loginBtn"
        android:layout_width="0dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:layout_height="50dp">
    </androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:layout_marginTop="32dp"
        android:id="@+id/dont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        app:layout_constraintEnd_toEndOf="@+id/loginBtn"
        app:layout_constraintStart_toStartOf="@+id/loginBtn"
        tools:layout_editor_absoluteY="25dp">
    </TextView>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Now"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/dont"
        app:layout_constraintEnd_toEndOf="@+id/dont"
        app:layout_constraintStart_toStartOf="@+id/dont"
        tools:layout_editor_absoluteY="25dp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>